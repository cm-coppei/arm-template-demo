            {
                "name": "resourceTags",
                "type": "Microsoft.Common.TextBox",
                "label": "Resource Tags",
                "defaultValue": "{\"Environment\":\"Dev\",\"Project\":\"Demo\"}",
                "toolTip": "",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
